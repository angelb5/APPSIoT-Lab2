<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teclado.TecladoActualizarActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:text="Teclado"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textViewActivoTeclado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:text="Activo" />
            <Spinner
                android:id="@+id/spinnerPc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="48dp" />
            <Spinner
                android:id="@+id/spinnerMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:entries="@array/marcas"
                android:layout_marginTop="16dp" />
            <Spinner
                android:id="@+id/spinnerIdioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/idiomas"
                android:minHeight="48dp"
                android:layout_marginTop="16dp" />
            <EditText
                android:id="@+id/editTextTextAnioAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:hint="AÃ±o" />
            <EditText
                android:id="@+id/editTextTextModeloAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:hint="Modelo"
                android:layout_marginBottom="160dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>